<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import Model.Model_ERAFile;
			
			private var model:Model_ERAFile;
			
			public function setModel(model:Model_ERAFile):void {
				title.text = model.title;
				this.model = model;
				downloadName.text = this.model.downloadTitle;
			}
			
			public function getModel():Model_ERAFile {
				model.downloadTitle = this.downloadName.text;
				return model;
			}
			
			public function reset():void {
				this.downloadName.text = model.downloadTitle;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Label id="title" fontWeight="bold" />
	<s:HGroup verticalAlign="middle">
		<s:Label text="Download Name:" />
		<s:TextInput id="downloadName" width="100%" />
	</s:HGroup>
</s:VGroup>
