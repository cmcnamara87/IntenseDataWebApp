				   borderColor="0x888888"
				   borderVisible="true"
				   borderStyle="solid"
				   borderAlpha="1"
				   >
	<fx:Script>
		<![CDATA[
			import Controller.AppController;
			import Controller.Dispatcher;
			import Controller.ERA.CaseController;
			import Controller.IDEvent;
			
			import Model.Model_ERACase;
			import Model.Model_ERAUser;
			
