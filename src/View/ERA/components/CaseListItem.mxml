				var researcherLastName:String = (eraCase.researchersArray[0] as Model_ERAUser).lastName;
				var researcherMultiple:String = "";
				if(eraCase.researchersArray.length > 1) {
				researcherMultiple = " (+" + (eraCase.researchersArray.length - 1) + ")";
