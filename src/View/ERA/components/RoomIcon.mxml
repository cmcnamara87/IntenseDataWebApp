	<s:Label text="{roomName}" fontSize="15" color="0xcfcfcf" width="100%" textAlign="center" click="vgroup1_clickHandler(event)">
		<s:filters>
			<s:DropShadowFilter distance="1" angle="270" color="0x000000" blurX="0" blurY="0"/>
		</s:filters>
	</s:Label>
</s:VGroup>
