<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%">

	<fx:Script>
		<![CDATA[
			import mx.core.IVisualElement;
			
			[Bindable]
			public var title:String = "";
			
			[ArrayElementType("mx.core.IVisualElement")]
			public function set content(value:Array):void {
			    _content = value;
			}
			private var _content:Array;
			
			
			override protected function createChildren():void {
			    super.createChildren();
			    if( _content == null ) return;
			    for (var i:Number = 0; i < _content.length; i++) {   
			        var elt:IVisualElement = _content[i];
			        formParts.addElement(elt);
			    }
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Label id="roleTitle" text="{title}" fontSize="15" fontWeight="bold" color="0x5e6469" />
	<s:VGroup id="formParts">
	</s:VGroup>
	<mx:HRule chromeColor="0x000000" width="100%" />
</s:VGroup>
