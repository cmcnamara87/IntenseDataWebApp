<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:Admin="View.components.Admin.*"
		 paddingBottom="20" paddingLeft="20" paddingRight="20" paddingTop="20">

	<fx:Script>
		<![CDATA[
			import Model.Model_User;
			protected function createUserButton_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
			}

			protected function cancelUserButton_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.createUserPanel.visible = !this.createUserPanel.visible;
				this.createUserPanel.includeInLayout = !this.createUserPanel.includeInLayout;
			}


			protected function showCreateUserPanelButton_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.createUserPanel.visible = !this.createUserPanel.visible;
				this.createUserPanel.includeInLayout = !this.createUserPanel.includeInLayout;
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Scroller width="100%" height="100%">
		<s:VGroup>
			<s:Label text="Current Users" fontSize="20" fontWeight="bold">
			</s:Label>
			
			<s:Button id="showCreateUserPanelButton" label="Create New User" click="showCreateUserPanelButton_clickHandler(event)">
			</s:Button>
			
			<s:VGroup id="createUserPanel" visible="false" includeInLayout="false">
				<s:HGroup verticalAlign="middle">
					<s:Label text="QUT Username"></s:Label><s:TextInput id="qutUsername"></s:TextInput>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label text="First Name"></s:Label><s:TextInput id="firstName"></s:TextInput>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label text="Last Name"></s:Label><s:TextInput id="lastName"></s:TextInput>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Button id="createUserButton" label="Save" click="createUserButton_clickHandler(event)">
					</s:Button>
					<s:Button id="cancelUserButton" label="Cancel" click="cancelUserButton_clickHandler(event)">
					</s:Button>
				</s:HGroup>
			</s:VGroup>
			
			<s:Scroller width="100%" height="200">
				<s:VGroup id="allUsers" width="100%" height="100%">
				</s:VGroup>	
			</s:Scroller>
			
			<s:Label text="Roles" fontSize="20" fontWeight="bold">
			</s:Label>
			<s:VGroup id="roles" width="100%">
			</s:VGroup>
		</s:VGroup>
	</s:Scroller>
	
	
</s:VGroup>
