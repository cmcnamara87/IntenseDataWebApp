	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:DropShadowFilter id="shadowy" distance="8" angle="90" color="0x000000" alpha="0.2" blurX="8" blurY="8" inner="true"/>
	</fx:Declarations>
	<!-- The Case Panel -->
	<s:BorderContainer  id="casePanel" backgroundColor="0x565656" borderColor="0x222222" borderStyle="solid" height="100%" width="{casePanelExtended ? 225 : 0}" resizeEffect="Resize">
		<s:VGroup width="100%" height="100%" gap="0">
			<s:VGroup width="100%" paddingTop="10">
				<s:Label color="0xFFFFFF" text="ERA Case List" fontSize="20" paddingLeft="10"/>
				<s:DropDownList id="caseERADropdown" chromeColor="0x444444" contentBackgroundColor="0x444444" color="0xFFFFFF" width="100%">
				</s:DropDownList>
				<s:BorderContainer width="100%" height="35" backgroundColor="0x649ccf" borderVisible="false">
					<s:HGroup width="100%" height="100%" verticalAlign="middle" paddingRight="5">
						<s:TextInput width="100%" id="caseFilterTextInput" color="0xEEEEEE" paddingLeft="10" fontStyle="italic" height="100%" text="{caseSearchBoxDefaultText}" chromeColor="0x649ccf" contentBackgroundColor="0x649ccf" borderVisible="false" focusIn="caseFilterTextInput_focusInHandler(event)" focusOut="caseFilterTextInput_focusOutHandler(event)" change="caseFilterTextInput_changeHandler(event)" />
						<mx:Image source="{AssetLookup.SearchIcon}" />	
					</s:HGroup>
				</s:BorderContainer>
				
			</s:VGroup>
			<s:Scroller id="casePanelScroller" width="100%" height="100%" chromeColor="0x444444" filters="{casePanelScroller.verticalScrollBar.value > 0 ? shadowy : null}">
				<s:VGroup width="100%" gap="0">
					<s:VGroup id="casePanelContent" width="100%" gap="0">
					</s:VGroup>	
					<s:Label id="loadingLabel" color="0xFFFFFF" width="100" paddingLeft="10">
						Loading...
					</s:Label>
				</s:VGroup>
				
			</s:Scroller>
		</s:VGroup>
	</s:BorderContainer>
	<!-- END OF CASE PANEL -->
	
	<s:VGroup height="100%" width="100%" gap="0">
		<!-- START THE CONTENT SECTION -->
		<s:BorderContainer backgroundColor="0xFFFFFF" borderVisible="false" height="100%" width="100%">
			<s:Group height="100%" width="100%">
				<!-- The Current Room -->
				<s:Group height="100%" width="100%" id="room">
					<s:Label fontSize="16" text="Loading..." horizontalCenter="0" verticalCenter="0" />
				</s:Group>
				<!-- End of the Current room -->
				
				<!-- THE ERA Cases floating tag -->
				<s:BorderContainer buttonMode="true" id="caseTag" click="caseTag_clickHandler(event)" backgroundColor="0x222222" borderVisible="false" width="40" height="150" top="270">
					<mx:Image source="{AssetLookup.getERACaseClass()}" width="22" height="16" x="8" y="10"></mx:Image>
					<s:Label x="12" y="112" rotation="270" text="ERA Cases" color="white" fontSize="16"/>
					<mx:Image source="{AssetLookup.getERACaseClass()}" width="22" height="16" x="8" y="120"></mx:Image>
					<s:filters>
						<s:DropShadowFilter distance="3" angle="0" alpha="0.5" color="0x000000" blurX="20" blurY="20"/>
					</s:filters>
				</s:BorderContainer>
				<!-- The ERA cases floating tag -->
				
				<!--<s:BorderContainer backgroundColor="0x000000" alpha="0.3" width="100%" height="100%">
				</s:BorderContainer>-->
			</s:Group>
		</s:BorderContainer>
		<!-- END THE CONTENT SECTION -->
		
		<!-- START THE CASE NAV SECTION -->
		<s:BorderContainer id="caseNav" backgroundColor="0x565656" width="100%" height="140" borderVisible="false" resizeEffect="Resize">
			<s:VGroup horizontalAlign="center" height="100%" width="100%">
				<s:HGroup height="100%" verticalAlign="middle" gap="10" id="roomButtons">
					<components:RoomIcon roomName="Evidence Manager" id="evidenceManagementButton" roomType="{Model_ERARoom.EVIDENCE_MANAGEMENT}" />
					<mx:Image source="{AssetLookup.getLeftArrowIconClass()}" width="46" height="34"></mx:Image>
					<components:RoomIcon roomName="Evidence Box" alpha="0.5" id="evidenceBoxButton"  roomType="{Model_ERARoom.EVIDENCE_ROOM}"  />
					<mx:Image source="{AssetLookup.getLeftArrowIconClass()}" width="46" height="34"></mx:Image>
					<components:RoomIcon roomName="Forensic Lab" alpha="0.5" id="forensicLabButton"  roomType="{Model_ERARoom.FORENSIC_LAB}"  />
					<mx:Image source="{AssetLookup.getLeftRightArrowIconClass()}" width="46" height="72"></mx:Image>
					<components:RoomIcon roomName="Review Lab" alpha="0.5" id="screeningLabButton"  roomType="{Model_ERARoom.SCREENING_ROOM}"   />
					<mx:Image source="{AssetLookup.getLeftArrowIconClass()}" width="46" height="34"></mx:Image>
					<components:RoomIcon roomName="Exhibition" alpha="0.5"  id="exhibitionButton"  unavailable="false" roomType="{Model_ERARoom.EXHIBIT}"  />
					<mx:Image source="{AssetLookup.getLeftArrowIconClass() }"  width="46" height="34"></mx:Image>
					<components:RoomIcon roomName="Post Mortem" alpha="0.5" id="postMortemButton" unavailable="true" roomType="{Model_ERARoom.POST_MORTEM}"  />
				</s:HGroup>
			</s:VGroup>
		</s:BorderContainer>
		<!-- END THE CASE NAV SECTION-->
	</s:VGroup>
</s:HGroup>
