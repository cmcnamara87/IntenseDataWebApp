			protected function caseFilterTextInput_focusInHandler(event:FocusEvent):void
			{
				// TODO Auto-generated method stub
				if(caseFilterTextInput.text == caseSearchBoxDefaultText) {
					caseFilterTextInput.text = "";
					caseFilterTextInput.setStyle("fontStyle", "normal");
				}
			}


			protected function caseFilterTextInput_focusOutHandler(event:FocusEvent):void
			{
				if(caseFilterTextInput.text == "") {
					caseFilterTextInput.text = caseSearchBoxDefaultText;
					caseFilterTextInput.setStyle("fontStyle", "italic");
				}
			}

			protected function hgroup1_removedFromStageHandler(event:Event):void
			{
				keepAdding = false;
				
				this.removeEventListener(Event.REMOVED_FROM_STAGE, hgroup1_removedFromStageHandler);
				
				// remove all the cases list items
				casePanelContent.removeAllElements();
				
				// remove any of the rooms that are loaded
				room.removeAllElements();
				
				aasdf = null;
				arrayTest = null;
				evidenceManagement = null;
				evidenceBox = null;
				forensicLab = null;
				screeningLab = null;
				exhibition = null;
				caseCounter = null;
				caseArray = null;
				selectedCase = null;
			}
			
